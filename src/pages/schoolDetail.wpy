  <view class="business-conditions basic-situation" wx:if="{{currentTab==1}}">
    <view class="empty" hidden="{{!businessEmpty}}">暂无学校业务情况</view>
    <view hidden="{{businessEmpty}}">
      <view class="basic-option">
        <text class="basic-content">学生总人数</text>
