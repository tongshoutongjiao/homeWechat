        <repeat for="{{integralDetails}}" index="index" item="item">
          <view class="integral-option">
            <view class="ident {{item.ident ? '' : 'visibility'}}">{{item.ident}}</view>
            <view class="{{item.name ? '' : 'visibility'}}">{{item.name}}</view>
